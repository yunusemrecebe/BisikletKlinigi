<div class="container Contact">
    <div class="row">

        <div class="col d-flex align-items-center">
            <address>
                Adres: Mevlana Mahallesi Çelebi Mehmet Caddesi
                No: 33A 34515 Esenyurt – İstanbul <br />
                Telefon: 0 212 854 38 55 / 300 <br />
                Posta Kodu: 34515 <br />
                E-Posta: info@marmarapark.com <br />
                Web: www.marmarapark.com
            </address>
        </div>

        <div class="col">
            <div id="map">

            </div>
        </div>

    </div>

    <section class="align-center text-center">
        <div class="container align-items-center">
            <hr>
            <h2>İletişime Geçin</h2>
            <p>Düşüncelerinizi iletişim formuyla iletmekten çekinmeyin.</p>

            <div class="col-md-6" style="margin:auto">
                @if (ViewBag.result != null)
                {
                    <p>@ViewBag.result</p>
                }
                @if (ViewBag.error != null)
                {
                    <p>@ViewBag.error</p>
                }
                <form action="/ContactUs/Index" method="POST" class="form-horizontal">
                    <div class="form-group">
                        <label for="InputName">Adınız</label>
                        <input type="text" class="form-control" id="InputName" placeholder="Ad Soyad">
                    </div>
                    <div class="form-group">
                        <label for="InputEmail">Email</label>
                        <input type="email" class="form-control" id="InputEmail" placeholder="adsoyad@example.com">
                    </div>
                    <div class="form-group ">
                        <label for="InputText">Mesajınız</label>
                        <textarea class="form-control" placeholder="Açıklama"></textarea>
                    </div>
                    <button type="submit" class="btn btn-danger btn-lg mt-1">Gönder</button>
                </form>

                <hr>
                <h3>Sosyal Medyada Biz</h3>
                <ul class="list-inline">
                    <li><a href="https://www.facebook.com/" class="btn btn-default btn-lg"><i class="bi bi-facebook"></i><span class="network-name"> Facebook</span></i></a></li>
                    <li><a href="https://twitter.com/" class="btn btn-default btn-lg"><i class="bi bi-twitter"></i> <span class="network-name">Twitter</span></i></a></li>
                    <li><a href="https://www.instagram.com/" class="btn btn-default btn-lg"><i class="bi bi-instagram"></i> <span class="network-name">Instagram</span></i></a></li>
                </ul>
            </div>

        </div>

    </section>


</div>
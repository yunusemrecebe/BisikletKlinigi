@{
    Layout = "_AdminLayout";
}

@model X.PagedList.IPagedList<Entities.Concrete.Sale>

@using X.PagedList.Mvc.Core;
@using X.PagedList;

@section pagination
{
    <link href="/css/PagedList.css" rel="stylesheet" type="text/css" />
}

@{
    ViewBag.Title = "Yönetim Paneli";
}

<div class="container Sales position-relative mt-4">
    <h2 class="text-center">Satılık Bisikletler</h2>
    <hr />
    <div class="row d-flex Sales-row">

        @if (ViewBag.result.Count > 0)
        {
            @await Html.PartialAsync("_updateSaleCard", Model)
        }
        else
        {
            <div class="alert alert-warning myAlert">
                @ViewBag.updateResult
            </div>
        }
        @if (ViewBag.deleteResult != null)
        {
            <div class="alert alert-warning myAlert">
                <p>@TempData["deleteResult"].ToString()</p>
            </div>
        }
        
        <div class="row"></div>
        <div class="col-md-5"></div>
        <div class="col-md-2 mt-4">@Html.PagedListPager((IPagedList)ViewBag.OnePageOfProducts, page => Url.Action("Index", new { page }))</div>
        <div class="col-md-5"></div>
    </div>

    

</div>
@model Entities.Concrete.Sale
@{
    ViewBag.Title = Model.Topic + " - Bisiklet Kliniği";
}
<div class="container">

    @if (ViewBag.detailsResult)
    {
        <div class="row mt-4">
            <div class="col-md-6">
                <img src="/img/uploads/@Model.Image" alt="@Model.Topic, Satılık Bisiklet, Bisiklet Kliniği" class="img-fluid" />
            </div>



            <div class="col-md-6">
                <h4>@Model.Topic</h4>

                <table class="table table-borderless">
                    <thead>
                        <tr>
                            <th scope="col"></th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Marka:</td>
                            <td>@Model.Brand</td>
                        </tr>
                        <tr>
                            <td>Model:</td>
                            <td>@Model.Model</td>
                        </tr>
                        <tr>
                            <td>Türü:</td>
                            <td>@Model.Genre</td>
                        </tr>
                        <tr>
                            <td>Kadro Boyu:</td>
                            <td>@Model.FrameSize</td>
                        </tr>
                        <tr>
                            <td>Jant Çapı:</td>
                            <td>@Model.WheelSize</td>
                        </tr>
                        <tr>
                            <td>Fren Sistemi:</td>
                            <td>@Model.BrakeSystem</td>
                        </tr>
                        <tr>
                            <td>Vites Sistemi:</td>
                            <td>@Model.FrontDerailleurs</td>
                        </tr>
                        <tr>
                            <td>Vites Sayısı:</td>
                            <td>@Model.Speed</td>
                        </tr>
                        <tr>
                            <td>Garanti Durumu:</td>
                            <td>@Model.Warranty</td>
                        </tr>
                        <tr>
                            <td>Fiyatı:</td>
                            <td>@String.Format("{0:0,0.00}", Model.Price)  &#8378</td>
                        </tr>
                    </tbody>
                </table>
                <hr />
                <p>@Model.Description</p>
            </div>

        </div>
    }
    else
    {
        <div class="col-sm alert alert-warning m-5">
            @ViewBag.detailsMessage
        </div>
    }
</div>


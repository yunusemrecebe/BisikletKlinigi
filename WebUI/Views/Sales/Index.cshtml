@model Entities.Concrete.Sale

    <div class="container mt-4">

        <h1> Satıştaki Bisikletler </h1>

        <div class="container border border-5 Sales position-relative">
            <div class="row d-flex Sales-row">

                @*@if (@Model.Id > 0)
                {

                }
                else
                {
                    <div class="alert alert-warning">
                        Film bulunamadı!
                    </div>
                }*@

                @foreach (var sale in ViewBag.result)
                {
                    @*@await Html.PartialAsync("_saleCard", Sales)*@

                    <div class="card Sales-card m-2 p-0" style="width: 18rem;">
                        <img src="~/img/uploads/@sale.Image" class="card-img-top" alt="bisiklet kliniği, bisiklet servisi">
                        <div class="card-body">
                            <h5 class="card-title">@sale.Topic</h5>
                            <p class="card-text">@sale.Description</p>
                            <span>@sale.Price</span>
                            <a href="/Sales/Details/@sale.Id" class="btn btn-danger">Detayları Gör</a>
                        </div>
                    </div>

                }


            </div>

            <nav aria-label="Page navigation" class="position-absolute bottom-0 start-50 translate-middle-x">
                <ul class="pagination">
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Önceki">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Sonraki">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>

    </div>



